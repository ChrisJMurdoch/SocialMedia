<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<!-- This file defines the web-server layout such as mapping of filters and servlets to patterns and URLs -->

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <!-- Filters -->
  <filter>
  	<filter-name>FileFilter</filter-name>
  	<display-name>FileFilter</display-name>
  	<description></description>
  	<filter-class>filters.FileFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>ProfileFilter</filter-name>
  	<display-name>ProfileFilter</display-name>
  	<description></description>
  	<filter-class>filters.ProfileFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>FileFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ProfileFilter</filter-name>
  	<url-pattern>/users/*</url-pattern>
  </filter-mapping>
  
  <!-- Listeners -->
  <listener>
  	<listener-class>listeners.Lifetime</listener-class>
  </listener>
  
  <!-- Servlets -->
  <servlet>
  	<servlet-name>Status</servlet-name>
  	<display-name>Status</display-name>
  	<description></description>
  	<servlet-class>servlets.Status</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<display-name>Login</display-name>
  	<description></description>
  	<servlet-class>servlets.Login</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Logout</servlet-name>
  	<display-name>Logout</display-name>
  	<description></description>
  	<servlet-class>servlets.Logout</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Register</servlet-name>
  	<display-name>Register</display-name>
  	<description></description>
  	<servlet-class>servlets.Register</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Post</servlet-name>
  	<display-name>Post</display-name>
  	<description></description>
  	<servlet-class>servlets.Post</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Follow</servlet-name>
  	<display-name>Follow</display-name>
  	<description></description>
  	<servlet-class>servlets.Follow</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Like</servlet-name>
  	<display-name>Like</display-name>
  	<description></description>
  	<servlet-class>servlets.Like</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Unlike</servlet-name>
  	<display-name>Unlike</display-name>
  	<description></description>
  	<servlet-class>servlets.Unlike</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Verify</servlet-name>
  	<display-name>Verify</display-name>
  	<description></description>
  	<servlet-class>servlets.Verify</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ChangePass</servlet-name>
  	<display-name>ChangePass</display-name>
  	<description></description>
  	<servlet-class>servlets.ChangePass</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Status</servlet-name>
  	<url-pattern>/status</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Register</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Post</servlet-name>
  	<url-pattern>/post</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Follow</servlet-name>
  	<url-pattern>/follow</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Like</servlet-name>
  	<url-pattern>/like</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Unlike</servlet-name>
  	<url-pattern>/unlike</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Verify</servlet-name>
  	<url-pattern>/verify</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ChangePass</servlet-name>
  	<url-pattern>/changepass</url-pattern>
  </servlet-mapping>
  
</web-app>
